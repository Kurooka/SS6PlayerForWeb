{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es5" ,"es2015", "dom"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/pixi.js/pixi.js.d.ts",
      "dist/types",
      "node_modules/@types"
    ],
    "types": ["pixi.js"]
  },
  "include": [
    "src"
  ]
}
